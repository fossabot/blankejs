{
  "name": "BlankE",
  "description": "BlankE game dev",
  "version": "0.1.0",
  "main": "src/index.html",
  "chromium-args": "--disable-devtools",
  "window": {
    "frame": false,
    "transparent": true,
    "width": 800,
    "height": 600,
    "icon": "src/logo.png"
  },
  "build": {
    "nwVersion": "0.30.2",
    "nwFlavor": "normal",
    "files": [
      "./src/**/**"
    ]
  },
  "scripts": {
    "less": "lessc --math=strict src/less/main.less src/main.css",
    "nw": "nw .",
    "setup-dev": "npm i; npm i less -g; git submodule init; git submodule update",
    "dist": "build --tasks win-x86 --mirror https://dl.nwjs.io/ .",
    "dist-mac": "build --tasks mac-x64 --mirror https://dl.nwjs.io/ .; cp -R blanke dist/BlankE-0.1.0-mac-x64/BlankE.app/Contents/Resources/app.nw/blanke; cp -R love2d dist/BlankE-0.1.0-mac-x64/BlankE.app/Contents/Resources/app.nw/love2d"
  },
  "developer": {
    "showDevToolsOnStartup": true
  },
  "dependencies": {
    "archiver": "^2.1.1",
    "fs-extra": "^5.0.0",
    "nw": "^0.30.2-sdk",
    "walk": "^2.3.13"
  },
  "devDependencies": {
    "nwjs-builder-phoenix": "^1.14.8"
  }
}
